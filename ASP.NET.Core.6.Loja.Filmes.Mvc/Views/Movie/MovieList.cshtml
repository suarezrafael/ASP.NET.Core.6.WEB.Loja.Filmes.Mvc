@model ASP.NET.Core._6.Loja.Filmes.Mvc.Models.DTO.MovieListVm
@{
}

<div class="tbl-container">
    <h2>Filmes</h2>

    <table>
        <tr>
            <th>Título</th>
            <th>Gênero</th>
            <th>Ano Lançamento</th>
            <th>Imagem</th>
            <th>Cast</th>
            <th>Diretor</th>
            <th>Ação</th>
        </tr>
        @foreach(var item in Model.MovieList){
        <tr>
            <td>@item.Title</td>
                <td>@item.GenreNames</td>
                <td>@item.ReleaseYear</td>
            <td><img style="height:60px;width:80px" src="/Uploads/@item.MovieImage"/></td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                <td>
                <a href="/Movie/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                <a onclick="return window.confirm('Você tem certeza?')" href="/Movie/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
     
    </table>
    <div class="input-container">
        <a href="/Movie/Add" class="btn btn-sec">Back</a>
    </div>
</div>
